#!/bin/bash

function start() {
    echo "Start\n" > ~/mc.txt
}

function stop() {
    echo "Stop\n" > ~/mc.txt
}

function reload() {
    echo "Reload\n" > ~/mc.txt
}
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  reload)
    reload
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|reload}"
esac