#!/bin/bash

function start() {
    echo "Start\n" > ~/mc.txt

    sleep 3

    while [ true ]; do
        echo "Sleeping\n" > ~/mc.txt
        sleep 1
    done
}

function stop() {
    echo "Stop\n" > ~/mc.txt
}

function reload() {
    echo "Reload\n" > ~/mc.txt
    sleep 3
}
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  reload)
    reload
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|reload}"
esac